---
import MainLayout from "../layouts/MainLayout.astro";
import { Settings } from "lucide-react";
---

<MainLayout title="Configuración de la Iglesia">
    <div
        class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 text-center"
    >
        <div
            class="w-16 h-16 bg-gray-50 text-gray-600 rounded-full flex items-center justify-center mx-auto mb-4"
        >
            <Settings className="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold text-gray-800 mb-2">
            Configuración General
        </h3>
        <p class="text-gray-500 max-w-md mx-auto">
            Administra los datos de la iglesia, usuarios del sistema y
            configuraciones globales.
            <br />
            <span
                class="text-xs font-semibold bg-gray-100 text-gray-700 px-2 py-1 rounded-full mt-2 inline-block"
                >Próximamente</span
            >
        </p>
    </div>
</MainLayout>
