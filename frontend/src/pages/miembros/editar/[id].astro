---
export const prerender = false;

import MainLayout from "../../../layouts/MainLayout.astro";
import FormularioMiembro from "../../../components/miembros/FormularioMiembro.jsx";

const { id } = Astro.params;
---

<MainLayout title="Editar Miembro">
    <div class="mb-6">
        <a
            href="/miembros"
            class="text-gray-500 hover:text-[#15344f] flex items-center gap-2 mb-4 text-sm font-medium transition-colors"
        >
            ⬅ Volver a la lista
        </a>
        <h1 class="text-2xl font-bold text-[#15344f]">Editar Información</h1>
        <p class="text-gray-600 text-sm">
            Actualiza los datos del miembro seleccionado.
        </p>
    </div>

    <FormularioMiembro client:load id={id} />
</MainLayout>
