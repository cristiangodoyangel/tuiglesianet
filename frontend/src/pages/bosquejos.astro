---
import MainLayout from "../layouts/MainLayout.astro";
import { BookOpen } from "lucide-react";
---

<MainLayout title="Bosquejos Bíblicos">
    <div
        class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 text-center"
    >
        <div
            class="w-16 h-16 bg-blue-50 text-blue-600 rounded-full flex items-center justify-center mx-auto mb-4"
        >
            <BookOpen className="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold text-gray-800 mb-2">Bosquejos Bíblicos</h3>
        <p class="text-gray-500 max-w-md mx-auto">
            Accede a una colección de bosquejos de sermones listos para
            predicar.
            <br />
            <span
                class="text-xs font-semibold bg-blue-100 text-blue-700 px-2 py-1 rounded-full mt-2 inline-block"
                >Premium</span
            >
        </p>
    </div>
</MainLayout>
