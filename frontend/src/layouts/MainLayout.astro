---
import "../styles/global.css";
const { title } = Astro.props;
import logo from "../assets/img/logo.png";
import {
  LayoutDashboard,
  Users,
  CircleDollarSign,
  HeartHandshake,
  Settings,
  Sparkles,
  Calendar,
  UserPlus,
  BookOpen,
  Archive,
} from "lucide-react";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta charset="UTF-8" />
    <link rel="icon" href="/favico.ico" />
    <title>{title} | TuIglesia.net</title>
    <meta name="viewport" content="width=device-width" />
  </head>
  <body class="bg-gray-50 flex min-h-screen font-sans">
    <aside
      class="w-64 bg-primary text-white flex flex-col fixed h-full shadow-xl z-10"
    >
      <div class="p-6 border-b border-white/10">
        <div class="flex items-center gap-3">
          <img src={logo.src} class="w-48" alt="Logo" />
        </div>
      </div>

      <nav class="flex-1 py-6 px-3 space-y-1">
        <a
          href="/"
          class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-secondary transition-colors text-sm font-medium"
        >
          <LayoutDashboard className="w-5 h-5" />
          Inicio
        </a>

        <a
          href="/miembros"
          class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-secondary transition-colors text-sm font-medium"
        >
          <Users className="w-5 h-5" />
          Miembros
        </a>
        <a
          href="/oracion"
          class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-secondary transition-colors text-sm font-medium"
        >
          <HeartHandshake className="w-5 h-5" />
          Oración
        </a>

        <a
          href="/finanzas"
          class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-secondary transition-colors text-sm font-medium"
        >
          <CircleDollarSign className="w-5 h-5" />
          Finanzas
        </a>
        <a
          href="/actividades"
          class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-secondary transition-colors text-sm font-medium"
        >
          <Calendar className="w-5 h-5" />
          Actividades
        </a>
        <a
          href="/admin"
          class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-secondary transition-colors text-sm font-medium"
        >
          <Settings className="w-5 h-5" />
          Configuración
        </a>
        <div class="pt-4 mt-4 border-t border-secondary">
          <p
            class="px-4 text-xs font-semibold text-blue-200 uppercase tracking-wider mb-2"
          >
            Premium
          </p>
          <a
            href="/ia"
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-white hover:bg-secondary/30 transition-colors text-sm font-bold"
          >
            <Sparkles className="w-5 h-5" />
            Consejería
          </a>
          <a
            href="/bosquejos"
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-white hover:bg-secondary/30 transition-colors text-sm font-medium"
          >
            <BookOpen className="w-5 h-5" />
            Bosquejos Bíblicos
          </a>
          <a
            href="/materiales"
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-white hover:bg-secondary/30 transition-colors text-sm font-medium"
          >
            <Archive className="w-5 h-5" />
            Material para Iglesias
          </a>
        </div>
      </nav>

      <div class="p-4 text-xs text-gray-400 text-center">
        © 2026 TuIglesia.net
      </div>
    </aside>

    <main class="ml-64 flex-1 p-8">
      <header
        class="mb-8 border-b border-gray-200 pb-4 flex justify-between items-center"
      >
        <h2 class="text-3xl font-bold text-primary">{title}</h2>
        <div class="flex items-center gap-2">
          <span class="text-sm text-gray-500">Hola, Pastor Cristian</span>
          <div
            class="w-8 h-8 rounded-full bg-primary text-white flex items-center justify-center font-bold"
          >
            C
          </div>
        </div>
      </header>

      <slot />
    </main>
  </body>
</html>
